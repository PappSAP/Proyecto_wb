<mvc:View
    controllerName="proyectowb.controller.View00"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"

>
    <sap.ui.layout.form:SimpleForm
        xmlns:sap.ui.layout.form="sap.ui.layout.form"
        xmlns:sap.ui.core="sap.ui.core"
        editable="true"
        layout="ResponsiveGridLayout"
        id="form0"
    >
        <sap.ui.layout.form:content>
            <sap.ui.core:Title text="Demo Calculadora" />

            <Label
                text="Valor 1"
                labelFor="ValInput0"
            />
            <Input
                width="40%"
                id="ValInput0"
                placeholder="Ingrese valor"
                valueStateText="El valor debe ser numÃ©rico"
                value="{
                    path : '/name',
                    type : 'sap.ui.model.type.String',
                    constraints : {
                        minLength: 1,
                        maxLength: 5
                                }
                        }"
                change="onChangeInput0"
            />

            <Label
                text="Valor 2"
                labelFor="ValInput1"
            />
            <Input
                width="40%"
                id="ValInput1"
            />

            <Button
                xmlns="sap.m"
                text="ejecutar"
                activeIcon="sap-icon://accept"
                press="OnPress"
            />
            <Label text="Resultado" />
            <Input
                width="100%"
                id="input2"
            />
        </sap.ui.layout.form:content>
    </sap.ui.layout.form:SimpleForm>
</mvc:View>
